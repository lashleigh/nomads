<%= form_for(@post) do |f| %>
  <%= render "home/errors", :target => @post %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <div class="field">
    <%= f.label :published %><br />
    <%= f.check_box :published %>
  </div>

  <p>
    <%= f.submit 'Save' %>
  </p>
<% end %>


